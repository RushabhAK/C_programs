p27
#include<stdio.h>
int main()
{
int num,inc1 ,dec1;
printf("Enter the number:");
scanf("%d",&num);
inc1=++num;
dec1=--num;
printf("Incremente=%d\nDecrement=%d\n",inc1,dec1);
}

