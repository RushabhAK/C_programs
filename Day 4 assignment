#include<stdio.h>
int main()
{
    int a=5,b=2,c=4,i;
    for(i=0;i<b;i++)
    {
        ++a;
    }
    printf("%d\n",a);
    for(i=0;i<c;i++)
    {
      --a;
    }
    printf("%d",a);

}

