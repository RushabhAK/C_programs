#include<stdio.h>
int main()
{
int a,b,Add,Mul,Sub;
float Div;
printf("Enter the values:");
scanf("%d\n%d",&a,&b);
Add=a+b;
Mul=a*b;
Sub=a-b;
Div=(float)a/(float)b;
printf("addition=%d\nsubtraction=%d\nmultiplication=%d\ndivision=%f",Add,Sub,Mul,Div);
}


p36
