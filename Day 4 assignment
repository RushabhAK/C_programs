int main()
{
int A=8,B=3,C,D,E,G;
float F;
printf("A=8\tB=3\n");
C=A+B;
D=A-B;
E=A*B;
F=(float)A/(float)B;
G=A%B;
printf("ADD=%d\nSUB=%d\nMUL=%d\nDIV=%f\nMOD=%d",C,D,E,F,G);
}


