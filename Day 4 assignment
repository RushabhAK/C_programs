p30
#include<stdio.h>
int main()
{
int num1,num2,Temp;
printf("Enter the two numbers:\n");
scanf("%d\n",&num1);
scanf("%d",&num2);
Temp=num1;
num1=num2;
num2=Temp;
printf("num1=%d\tnum2=%d",num1,num2);
}


